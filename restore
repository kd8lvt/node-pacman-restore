#!/bin/bash
if [ -x  "$(command -v node)" ]; then
  echo NodeJS is installed. Continuing...
else
  echo NodeJS not found. Installing...
  yes '' | pacman -Syu nodejs
  if [ -x "$(command -v node)" ]; then
    echo NodeJS install succeeded. Continuing...
  else
    echo NodeJS install failed. Exiting...
    exit -1
  fi
fi
echo Running NodeJS script...
node index "$@"